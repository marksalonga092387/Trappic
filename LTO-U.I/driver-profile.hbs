        mycontract = new web3.eth.Contract(abi, address, {
          from: acc,
          gasPrice: '0',
          gas: 1400000
        });
        pdisplay();
        hdisplay();
      })

      function pdisplay() {
        var list = $("#pv");
        list.empty();


        mycontract.methods.getlength().call().then(function (len) {
          let ctr = 0;
          for (let x = 0; x < len; x++) {
            mycontract.methods.getddata(x).call({ from: acc }).then(function (result) {
              let driver = "";
              let enforcer = "";
              let license = "";
              if (result[5] == false) {
                {{#each enforcer}}
                if ("{{dno}}" == result[0]) {
                  enforcer = "{{name}}";
                }
                {{/each}}
                {{#each driver}}
                if ("{{dno}}" == result[1]) {
                  driver = "{{name}}";
                  mycontract.methods.getppdata(x).call({ from: acc }).then(function (result1) {
                  ctr++;
                  var datenow = new Date();
                  var due = new Date(result1[0]);
                  let d = 0;
                  while (due < datenow) {
                      d++;
                      due.setDate(due.getDate() + 1);
                  }
                    if (d != 0)
                    d--;
                    let pen = 100 * d;
                    var add = "<tr><td>" + ctr + "</td><td>" + result[3] + "</td><td>" + result[4] + "</td><td>" + result[2] + "</td><td>" + enforcer + "</td><td>" + result1[0] + "</td></td><td>" + result1[1] + "</td></td><td>" + pen + "</td></td><td>" + result1[3] + "</td></tr>";
                    list.append(add);
                  });
                }
                {{/each}}
              }
            });
          }
        });
      }

      function hdisplay() {
        var list = $("#hv");
        list.empty();


        mycontract.methods.getlength().call().then(function (len) {
          let ctr = 0;
          for (let x = 0; x < len; x++) {
            mycontract.methods.getddata(x).call({ from: acc }).then(function (result) {
              let driver = "";
              let enforcer = "";
              let license = "";
              if (result[5] == true) {
                {{#each enforcer}}
                if ("{{dno}}" == result[0]) {
                  enforcer = "{{name}}";
                }
                {{/each}}
                {{#each driver}}
                if ("{{dno}}" == result[1]) {
                  driver = "{{name}}";
                  mycontract.methods.getppdata(x).call({ from: acc }).then(function (result1) {
                    ctr++;
                    var datenow = new Date();
                    var due = new Date(result1[0]);
                    let d = 0;
                    while (due < datenow) {
                      d++;
                      due.setDate(due.getDate() + 1);
                    }
                    if (d != 0)
                      d--;
                      let pen = 100 * d;
                      var add = "<tr><td>" + ctr + "</td><td>" + result[3] + "</td><td>" + result[4] + "</td><td>" + result[2] + "</td><td>" + enforcer + "</td><td>" + result1[0] + "</td></td><td>" + result1[1] + "</td></td><td>" + result1[2] + "</td></td><td>" + result1[3] + "</td></tr>";
                      list.append(add);
                  });
                }
                {{/each}}
              }
            });
          }
        });
      }
    });
  </script>
</body>

</html>