  <section id="banner">
    <div class="container">
      <div class="row">
        <div class="col-md-6">
          <p class="promo-title">SEARCH</p>
        </div>
      </div>
    </div>
  </section>

  <section id="search">
    <div class="row">
      <div class="list-group" id="list-tab" role="tablist">
        <a class="list-group-item list-group-item-action active" id="list-info-list" data-toggle="list"
          href="#list-info" role="tab" aria-controls="info">Personal Info</a>
        <a class="list-group-item list-group-item-action" id="list-cars-list" data-toggle="list" href="#list-cars"
          role="tab" aria-controls="cars">Cars</a>
        <a class="list-group-item list-group-item-action" id="list-license-list" data-toggle="list" href="#list-license"
          role="tab" aria-controls="license">License Info</a>
        <a class="list-group-item list-group-item-action" id="list-violations-list" data-toggle="list"
          href="#list-violations" role="tab" aria-controls="violations">Violations</a>
      </div>

      <div class="col-8">
        <div class="tab-content" id="nav-tabContent">
          <div class="tab-pane fade show active" id="list-info" role="tabpanel" aria-labelledby="list-info-list">

            {{#each result}}
            <form class="form-inline my-2 my-lg-0" action="/editprofile?para1={{licence_no}}&para2={{usertype}}"
              method="POST">
              <table class="table">
                <thead>
                  <tr>
                    <th scope="col">License No.</th>
                    <td>{{licence_no}}</th>
                    <th>Firstname</th>
                    <td>{{fname}}</td>


                  </tr>

                </thead>
                <tbody>
                  <tr>
                    <th>Middlename</th>
                    <td>{{mname}}</td>
                    <th>Lastname</th>
                    <td>{{lname}}</td>
                  </tr>

                </tbody>
                <thead>
                  <tr>

                    <th>User Type</th>
                    <td>{{usertype}}</td>
                    <th scope="col">Nationality</th>
                    <td>{{nationality}}</th>
                  </tr>
                  <br>
                </thead>
                <tbody>
                  <tr>
                    <th scope="col">Sex</th>
                    <td>{{sex}}</td>
                    <th scope="col">Email</th>
                    <td>{{email}}</td>
                  </tr>

                </tbody>
                <thead>
                  <tr>
                    <th scope="col">Zip Code</th>
                    <td>{{zip}}</td>
                    <th scope="col">Address</th>
                    <td>{{address}}</td>
                  </tr>

                </thead>
                <tbody>
                  <tr>
                    <th scope="col">Birthday</th>
                    <td>{{bday}}</td>
                    <th scope="col">Birthplace</th>
                    <td>{{birthplace}}</td>

                  </tr>

                </tbody>

              </table>
              <button type="submit" class="btn btn-outline-success">Edit</button>
              {{/each}}
            </form>
          </div>
          <div class="tab-pane fade show" id="list-cars" role="tabpanel" aria-labelledby="list-cars-list">

            <form class="form-inline my-2 my-lg-0">

              <table class="table">
                <thead class="thead-dark">
                  <tr>
                    <th scope="col">#</th>
                    <th scope="col">Car Brand</th>
                    <th scope="col">Car Model</th>
                    <th scope="col">Car Color</th>
                    <th scope="col">Plate Number</th>
                    <th scope="col">Conduction Sticker</th>

                  </tr>
                </thead>
                <tbody>
                  {{#each car}}
                  <tr>
                    <th scope="row">{{cno}}</th>
                    <td>{{brand}}</td>
                    <td>{{model}}</td>
                    <td>{{color}}</td>
                    <td>{{platenumber}}</td>
                    <td>{{conductor}}</td>

                  </tr>
                  {{/each}}
                </tbody>
              </table>
            </form>
          </div>

          <div class="tab-pane fade" id="list-license" role="tabpanel" aria-labelledby="list-license-list">
            {{#each result}}
            <div class="row">
              <div class="col-md-6">
                <label>License Number</label>
              </div>
              <div class="col-md-6">
                <p>{{licence_no}}</p>
              </div>
            </div>

            <div class="row">
              <div class="col-md-6">
                <label>Name</label>
              </div>
              <div class="col-md-6">
                <p>{{name}}</p>
              </div>
            </div>
            <div class="row">
              <div class="col-md-6">
                <label>Address</label>
              </div>
              <div class="col-md-6">
                <p>{{address}}</p>
              </div>
            </div>
            <div class="row">
              <div class="col-md-6">
                <label>Contact no.</label>
              </div>
              <div class="col-md-6">
                <p>{{contact}}</p>
              </div>
            </div>
            <div class="row">
              <div class="col-md-6">
                <label>Expiration Date</label>
              </div>
              <div class="col-md-6">
                <p>October 11, 1996</p>
              </div>
            </div>
            <div class="row">
              <div class="col-md-6">
                <label>Status</label>
              </div>
              <div class="col-md-6">
                <p>Expired</p>
              </div>
              <button type="button" class="btn btn-outline-success">Terminate</button>
              {{/each}}
            </div>
          </div>

          <div class="tab-pane fade" id="list-violations" role="tabpanel" aria-labelledby="list-violations-list">

            <h3>Pending Violations</h3>
            <form class="form-inline my-2 my-lg-0">
              <table class="table">
                <thead class="thead-dark">
                  <tr>
                    <th scope="col">#</th>
                    <th scope="col">Violation</th>
                    <th scope="col">Location</th>
                    <th scope="col">Date</th>
                    <th scope="col">Officer</th>
                    <th scope="col">DueDate</th>
                    <th scope="col">Payment</th>
                    <th scope="col">Penalty</th>
                    <th scope="col">License Tracker</th>


                  </tr>
                </thead>
                <tbody id="pv">

                </tbody>
              </table>
            </form>


            <h3>History of Violations</h3>
            <form class="form-inline my-2 my-lg-0">
              <table class="table">
                <thead class="thead-dark">
                  <tr>
                    <th scope="col">#</th>
                    <th scope="col">Violation</th>
                    <th scope="col">Location</th>
                    <th scope="col">Date</th>
                    <th scope="col">Officer</th>
                    <th scope="col">DueDate</th>
                    <th scope="col">Payment</th>
                    <th scope="col">Penalty</th>
                    <th scope="col">License Tracker</th>


                  </tr>
                </thead>
                <tbody id="hv">

                </tbody>
              </table>
            </form>

          </div>
        </div>
      </div>
    </div>
  </section>

